        "script": [
            "$exe = (Get-ChildItem \"$dir\" 'grepWin-*_portable.exe' | Select-Object -First 1).FullName",
            "Rename-Item \"$exe\" \"$dir\\grepWin.exe\""
        ]
    },
    "bin": "grepWin.exe",
    "persist": "grepwin.ini",
    "shortcuts": [
        [
            "grepWin.exe",
            "grepWin",
            "/portable"
        ]
